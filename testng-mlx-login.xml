<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MLX Login API Test Suite" verbose="1" parallel="false">
    
    <parameter name="browser" value="chrome"/>
    
    <listeners>
        <listener class-name="com.mlx.api.utils.TestListener"/>
    </listeners>
    
    <test name="MLX Login API Tests" preserve-order="true">
        <classes>
            <class name="com.mlx.api.tests.MLXLoginTest">
                <methods>
                    <include name="testMLXLoginWithValidCredentials"/>
                    <include name="testMLXLoginWithInvalidEmail"/>
                    <include name="testMLXLoginWithInvalidPassword"/>
                    <include name="testMLXLoginWithMissingEmail"/>
                    <include name="testMLXLoginWithEmptyCredentials"/>
                    <include name="testMLXLoginWithDifferentAppTypes"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>
